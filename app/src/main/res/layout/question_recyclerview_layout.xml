<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="?colorOnPrimary"
    app:cardCornerRadius="5dp"
    android:outlineSpotShadowColor="#131313"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorOnPrimary"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="0dp" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:src ="@drawable/disease_icon"
            android:layout_height="45dp"
            app:tint="#7094AA" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:background="?colorOnPrimary"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of the question...."
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="#01324B"
                />

            <TextView
                android:id="@+id/subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asking for self, Female, 30 years old, Lahore"
                android:layout_marginBottom="10dp"
                android:textStyle="normal"
                android:maxLines="1"
                android:textSize="13dp"
                android:textColor="#767676"
                />

            <TextView
                android:id="@+id/query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum do Nullam pulvinar ipsum ut. Sed laoreet bibendum nisi consequat. Curabitur ultrices orci sed dictum finibus."
                android:layout_marginBottom="15dp"
                android:textStyle="normal"
                android:maxLines="6"
                android:textSize="16dp"
                android:textColor="#585858"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 months ago"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="12dp"
                android:textColor="#757575"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST ANSWER"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="14dp"
                android:textColor="#A63446"
                />



        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="0dp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>